<UserControl
    x:Class="CustomKeyBoard.Views.AlphabetView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:CustomKeyBoard.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:ClassModifier="internal"
    Background="{DynamicResource KeyboardBackgroundAccentBrush}"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Resources/DefaultStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <converters:UppercaseContentConverter x:Key="UppercaseContentConverter" />
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid Margin="10">
        <UniformGrid Columns="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button
                    Grid.Column="0"
                    Command="{Binding AddCharacter}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Content}"
                    Content="{Binding Alphabet.Q}"
                    Style="{DynamicResource KeyboardButtonStyle}"
                    Typography.Capitals="{Binding Uppercase, Converter={StaticResource UppercaseContentConverter}}" />
                <Button
                    Grid.Column="1"
                    Command="{Binding AddCharacter}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Content}"
                    Content="{Binding Alphabet.W}"
                    Style="{DynamicResource KeyboardButtonStyle}"
                    Typography.Capitals="{Binding Uppercase, Converter={StaticResource UppercaseContentConverter}}" />
                <Button
                    Grid.Column="2"
                    Command="{Binding AddCharacter}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Content}"
                    Content="{Binding Alphabet.E}"
                    Style="{DynamicResource KeyboardButtonStyle}"
                    Typography.Capitals="{Binding Uppercase, Converter={StaticResource UppercaseContentConverter}}" />
                <Button
                    Grid.Column="3"
                    Command="{Binding AddCharacter}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Content}"
                    Content="{Binding Alphabet.R}"
                    Style="{DynamicResource KeyboardButtonStyle}"
                    Typography.Capitals="{Binding Uppercase, Converter={StaticResource UppercaseContentConverter}}" />
                <Button
                    Grid.Column="4"
                    Command="{Binding AddCharacter}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Content}"
                    Content="{Binding Alphabet.T}"
                    Style="{DynamicResource KeyboardButtonStyle}"
                    Typography.Capitals="{Binding Uppercase, Converter={StaticResource UppercaseContentConverter}}" />
                <Button
                    Grid.Column="5"
                    Command="{Binding AddCharacter}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Content}"
                    Content="{Binding Alphabet.Y}"
                    Style="{DynamicResource KeyboardButtonStyle}"
                    Typography.Capitals="{Binding Uppercase, Converter={StaticResource UppercaseContentConverter}}" />
                <Button
                    Grid.Column="6"
                    Command="{Binding AddCharacter}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Content}"
                    Content="{Binding Alphabet.U}"
                    Style="{DynamicResource KeyboardButtonStyle}"
                    Typography.Capitals="{Binding Uppercase, Converter={StaticResource UppercaseContentConverter}}" />
                <Button
                    Grid.Column="7"
                    Command="{Binding AddCharacter}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Content}"
                    Content="{Binding Alphabet.I}"
                    Style="{DynamicResource KeyboardButtonStyle}"
                    Typography.Capitals="{Binding Uppercase, Converter={StaticResource UppercaseContentConverter}}" />
                <Button
                    Grid.Column="8"
                    Command="{Binding AddCharacter}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Content}"
                    Content="{Binding Alphabet.O}"
                    Style="{DynamicResource KeyboardButtonStyle}"
                    Typography.Capitals="{Binding Uppercase, Converter={StaticResource UppercaseContentConverter}}" />
                <Button
                    Grid.Column="9"
                    Command="{Binding AddCharacter}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Content}"
                    Content="{Binding Alphabet.P}"
                    Style="{DynamicResource KeyboardButtonStyle}"
                    Typography.Capitals="{Binding Uppercase, Converter={StaticResource UppercaseContentConverter}}" />
            </Grid>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.5*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="0.5*" />
                </Grid.ColumnDefinitions>
                <Button
                    Grid.Column="1"
                    Command="{Binding AddCharacter}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Content}"
                    Content="{Binding Alphabet.A}"
                    Style="{DynamicResource KeyboardButtonStyle}"
                    Typography.Capitals="{Binding Uppercase, Converter={StaticResource UppercaseContentConverter}}" />
                <Button
                    Grid.Column="2"
                    Command="{Binding AddCharacter}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Content}"
                    Content="{Binding Alphabet.S}"
                    Style="{DynamicResource KeyboardButtonStyle}"
                    Typography.Capitals="{Binding Uppercase, Converter={StaticResource UppercaseContentConverter}}" />
                <Button
                    Grid.Column="3"
                    Command="{Binding AddCharacter}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Content}"
                    Content="{Binding Alphabet.D}"
                    Style="{DynamicResource KeyboardButtonStyle}"
                    Typography.Capitals="{Binding Uppercase, Converter={StaticResource UppercaseContentConverter}}" />
                <Button
                    Grid.Column="4"
                    Command="{Binding AddCharacter}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Content}"
                    Content="{Binding Alphabet.F}"
                    Style="{DynamicResource KeyboardButtonStyle}"
                    Typography.Capitals="{Binding Uppercase, Converter={StaticResource UppercaseContentConverter}}" />
                <Button
                    Grid.Column="5"
                    Command="{Binding AddCharacter}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Content}"
                    Content="{Binding Alphabet.G}"
                    Style="{DynamicResource KeyboardButtonStyle}"
                    Typography.Capitals="{Binding Uppercase, Converter={StaticResource UppercaseContentConverter}}" />
                <Button
                    Grid.Column="6"
                    Command="{Binding AddCharacter}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Content}"
                    Content="{Binding Alphabet.H}"
                    Style="{DynamicResource KeyboardButtonStyle}"
                    Typography.Capitals="{Binding Uppercase, Converter={StaticResource UppercaseContentConverter}}" />
                <Button
                    Grid.Column="7"
                    Command="{Binding AddCharacter}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Content}"
                    Content="{Binding Alphabet.J}"
                    Style="{DynamicResource KeyboardButtonStyle}"
                    Typography.Capitals="{Binding Uppercase, Converter={StaticResource UppercaseContentConverter}}" />
                <Button
                    Grid.Column="8"
                    Command="{Binding AddCharacter}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Content}"
                    Content="{Binding Alphabet.K}"
                    Style="{DynamicResource KeyboardButtonStyle}"
                    Typography.Capitals="{Binding Uppercase, Converter={StaticResource UppercaseContentConverter}}" />
                <Button
                    Grid.Column="9"
                    Command="{Binding AddCharacter}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Content}"
                    Content="{Binding Alphabet.L}"
                    Style="{DynamicResource KeyboardButtonStyle}"
                    Typography.Capitals="{Binding Uppercase, Converter={StaticResource UppercaseContentConverter}}" />
            </Grid>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.1*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="1.9*" />
                </Grid.ColumnDefinitions>
                <ContentControl Grid.Column="0" Content="{StaticResource CasingButton}" />
                <Button
                    Grid.Column="1"
                    Command="{Binding AddCharacter}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Content}"
                    Content="{Binding Alphabet.Z}"
                    Style="{DynamicResource KeyboardButtonStyle}"
                    Typography.Capitals="{Binding Uppercase, Converter={StaticResource UppercaseContentConverter}}" />
                <Button
                    Grid.Column="2"
                    Command="{Binding AddCharacter}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Content}"
                    Content="{Binding Alphabet.X}"
                    Style="{DynamicResource KeyboardButtonStyle}"
                    Typography.Capitals="{Binding Uppercase, Converter={StaticResource UppercaseContentConverter}}" />
                <Button
                    Grid.Column="3"
                    Command="{Binding AddCharacter}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Content}"
                    Content="{Binding Alphabet.C}"
                    Style="{DynamicResource KeyboardButtonStyle}"
                    Typography.Capitals="{Binding Uppercase, Converter={StaticResource UppercaseContentConverter}}" />
                <Button
                    Grid.Column="4"
                    Command="{Binding AddCharacter}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Content}"
                    Content="{Binding Alphabet.V}"
                    Style="{DynamicResource KeyboardButtonStyle}"
                    Typography.Capitals="{Binding Uppercase, Converter={StaticResource UppercaseContentConverter}}" />
                <Button
                    Grid.Column="5"
                    Command="{Binding AddCharacter}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Content}"
                    Content="{Binding Alphabet.B}"
                    Style="{DynamicResource KeyboardButtonStyle}"
                    Typography.Capitals="{Binding Uppercase, Converter={StaticResource UppercaseContentConverter}}" />
                <Button
                    Grid.Column="6"
                    Command="{Binding AddCharacter}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Content}"
                    Content="{Binding Alphabet.N}"
                    Style="{DynamicResource KeyboardButtonStyle}"
                    Typography.Capitals="{Binding Uppercase, Converter={StaticResource UppercaseContentConverter}}" />
                <Button
                    Grid.Column="7"
                    Command="{Binding AddCharacter}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Content}"
                    Content="{Binding Alphabet.M}"
                    Style="{DynamicResource KeyboardButtonStyle}"
                    Typography.Capitals="{Binding Uppercase, Converter={StaticResource UppercaseContentConverter}}" />
                <ContentControl Grid.Column="8" Content="{StaticResource BackspaceButton}" />
            </Grid>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="4*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="2*" />
                </Grid.ColumnDefinitions>
                <Button
                    Grid.Column="0"
                    Command="{Binding ChangeKeyboardType}"
                    Content="?123"
                    Style="{DynamicResource KeyboardFunctionButtonStyle}" />
                <Button
                    Grid.Column="1"
                    Command="{Binding AddCharacter}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Content}"
                    Content=" "
                    Style="{DynamicResource KeyboardButtonStyle}" />
                <Button
                    Grid.Column="2"
                    Command="{Binding AddCharacter}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Content}"
                    Content="."
                    Style="{DynamicResource KeyboardButtonStyle}" />
                <Button
                    Grid.Column="3"
                    Command="{Binding AddCharacter}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Content}"
                    Content="@"
                    Style="{DynamicResource KeyboardButtonStyle}" />
                <ContentControl Grid.Column="4" Content="{StaticResource AcceptButton}" />
            </Grid>
        </UniformGrid>
    </Grid>
</UserControl>