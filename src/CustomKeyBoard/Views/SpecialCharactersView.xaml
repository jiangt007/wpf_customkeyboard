<UserControl
    x:Class="CustomKeyBoard.Views.SpecialCharactersView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:ClassModifier="internal"
    Background="{DynamicResource KeyboardBackgroundAccentBrush}"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Resources/DefaultStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid Margin="10">
        <UniformGrid Columns="1">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button
                    Grid.Column="0"
                    Command="{Binding AddCharacter}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Content}"
                    Content="1"
                    Style="{DynamicResource KeyboardButtonStyle}" />
                <Button
                    Grid.Column="1"
                    Command="{Binding AddCharacter}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Content}"
                    Content="2"
                    Style="{DynamicResource KeyboardButtonStyle}" />
                <Button
                    Grid.Column="2"
                    Command="{Binding AddCharacter}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Content}"
                    Content="3"
                    Style="{DynamicResource KeyboardButtonStyle}" />
                <Button
                    Grid.Column="3"
                    Command="{Binding AddCharacter}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Content}"
                    Content="4"
                    Style="{DynamicResource KeyboardButtonStyle}" />
                <Button
                    Grid.Column="4"
                    Command="{Binding AddCharacter}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Content}"
                    Content="5"
                    Style="{DynamicResource KeyboardButtonStyle}" />
                <Button
                    Grid.Column="5"
                    Command="{Binding AddCharacter}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Content}"
                    Content="6"
                    Style="{DynamicResource KeyboardButtonStyle}" />
                <Button
                    Grid.Column="6"
                    Command="{Binding AddCharacter}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Content}"
                    Content="7"
                    Style="{DynamicResource KeyboardButtonStyle}" />
                <Button
                    Grid.Column="7"
                    Command="{Binding AddCharacter}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Content}"
                    Content="8"
                    Style="{DynamicResource KeyboardButtonStyle}" />
                <Button
                    Grid.Column="8"
                    Command="{Binding AddCharacter}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Content}"
                    Content="9"
                    Style="{DynamicResource KeyboardButtonStyle}" />
                <Button
                    Grid.Column="9"
                    Command="{Binding AddCharacter}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Content}"
                    Content="0"
                    Style="{DynamicResource KeyboardButtonStyle}" />
            </Grid>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button
                    Grid.Column="0"
                    Command="{Binding AddCharacter}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Content}"
                    Content="&quot;"
                    Style="{DynamicResource KeyboardButtonStyle}" />
                <Button
                    Grid.Column="1"
                    Command="{Binding AddCharacter}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Content}"
                    Content="!"
                    Style="{DynamicResource KeyboardButtonStyle}" />
                <Button
                    Grid.Column="2"
                    Command="{Binding AddCharacter}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Content}"
                    Content="#"
                    Style="{DynamicResource KeyboardButtonStyle}" />
                <Button
                    Grid.Column="3"
                    Command="{Binding AddCharacter}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Content}"
                    Content="$"
                    Style="{DynamicResource KeyboardButtonStyle}" />
                <Button
                    Grid.Column="4"
                    Command="{Binding AddCharacter}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Content}"
                    Content="%"
                    Style="{DynamicResource KeyboardButtonStyle}" />
                <Button
                    Grid.Column="5"
                    Command="{Binding AddCharacter}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Content}"
                    Content="/"
                    Style="{DynamicResource KeyboardButtonStyle}" />
                <Button
                    Grid.Column="6"
                    Command="{Binding AddCharacter}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Content}"
                    Content="&amp;"
                    Style="{DynamicResource KeyboardButtonStyle}" />
                <Button
                    Grid.Column="7"
                    Command="{Binding AddCharacter}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Content}"
                    Content="*"
                    Style="{DynamicResource KeyboardButtonStyle}" />
                <Button
                    Grid.Column="8"
                    Command="{Binding AddCharacter}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Content}"
                    Content="("
                    Style="{DynamicResource KeyboardButtonStyle}" />
                <Button
                    Grid.Column="9"
                    Command="{Binding AddCharacter}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Content}"
                    Content=")"
                    Style="{DynamicResource KeyboardButtonStyle}" />
            </Grid>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="2*" />
                </Grid.ColumnDefinitions>
                <Button
                    Grid.Column="0"
                    Command="{Binding AddCharacter}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Content}"
                    Content="'"
                    Style="{DynamicResource KeyboardButtonStyle}" />
                <Button
                    Grid.Column="1"
                    Command="{Binding AddCharacter}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Content}"
                    Content="-"
                    Style="{DynamicResource KeyboardButtonStyle}" />
                <Button
                    Grid.Column="2"
                    Command="{Binding AddCharacter}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Content}"
                    Content="+"
                    Style="{DynamicResource KeyboardButtonStyle}" />
                <Button
                    Grid.Column="3"
                    Command="{Binding AddCharacter}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Content}"
                    Content=";"
                    Style="{DynamicResource KeyboardButtonStyle}" />
                <Button
                    Grid.Column="4"
                    Command="{Binding AddCharacter}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Content}"
                    Content=":"
                    Style="{DynamicResource KeyboardButtonStyle}" />
                <Button
                    Grid.Column="5"
                    Command="{Binding AddCharacter}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Content}"
                    Content=","
                    Style="{DynamicResource KeyboardButtonStyle}" />
                <Button
                    Grid.Column="6"
                    Command="{Binding AddCharacter}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Content}"
                    Content="_"
                    Style="{DynamicResource KeyboardButtonStyle}" />
                <Button
                    Grid.Column="7"
                    Command="{Binding AddCharacter}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Content}"
                    Content="?"
                    Style="{DynamicResource KeyboardButtonStyle}" />
                <ContentControl Grid.Column="8" Content="{StaticResource BackspaceButton}" />
            </Grid>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="4*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="2*" />
                </Grid.ColumnDefinitions>
                <Button
                    Grid.Column="0"
                    Command="{Binding ChangeKeyboardType}"
                    Content="abc"
                    Style="{DynamicResource KeyboardFunctionButtonStyle}" />
                <Button
                    Grid.Column="1"
                    Command="{Binding AddCharacter}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Content}"
                    Content=" "
                    Style="{DynamicResource KeyboardButtonStyle}" />
                <Button
                    Grid.Column="2"
                    Command="{Binding AddCharacter}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Content}"
                    Content="."
                    Style="{DynamicResource KeyboardButtonStyle}" />
                <Button
                    Grid.Column="3"
                    Command="{Binding AddCharacter}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Content}"
                    Content="@"
                    Style="{DynamicResource KeyboardButtonStyle}" />
                <ContentControl Grid.Column="4" Content="{StaticResource AcceptButton}" />
            </Grid>
        </UniformGrid>
    </Grid>
</UserControl>